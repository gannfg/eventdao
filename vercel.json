{
  "buildCommand": "npm run build:shared && cd frontend && npm ci && npm run build",
  "outputDirectory": "frontend/.next",
  "framework": "nextjs",
  "installCommand": "npm ci",
  "devCommand": "cd frontend && npm run dev",
  "functions": {
    "frontend/app/api/**/*.js": {
      "runtime": "nodejs18.x"
    }
  },
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/$1"
    }
  ]
}
